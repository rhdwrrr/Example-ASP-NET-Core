@{
    ViewData["Title"] = "Admin/Ubah Provinsi";
    Layout = null;
}
@model Provinsi

<form asp-action="edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" readonly asp-for="ID">
    <div class="form-group">
        <label class="form-label">Nama Provinsi</label>
        <input id="provinsi" type="text" class="form-control" asp-for="provinsi">
        <span asp-validation-for="provinsi" class="text-danger"></span>
    </div>
    <div class="form-group my-3">
        <div class="row">
            <div class="col-12">
                <button id="gotoPopup" style="width: 100%;" type="submit" class="btn btn-primary btn-block">Simpan</button>
            </div>
        </div>
        
    </div>
</form>


@section Scripts{
    <script>
        document.getElementById('provinsi').focus();

        if(!("@TempData["message"]" === ""))
        {
            alert("@TempData["message"]");
        }
    </script>
}